{
  "name": "demo-angular",
  "version": "1.0.8",
  "scripts": {
    "ng": "ng",
    "start": "npm run use:local && ng serve -o",
    "build": "ng build",
    "build:prod": "npm run use:npm && ng build --configuration production",
    "deploy": "ng deploy --base-href=/dga-ui/",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "use:local": "npm install --no-save file:.. && echo Using local sdga-ui",
    "use:npm": "node -e \"const fs=require('fs');const pkg=JSON.parse(fs.readFileSync('package.json'));const version=pkg.dependencies['sdga-ui'];console.log('Installing sdga-ui@'+version);\" && npm install && echo Using npm sdga-ui"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.3",
  "dependencies": {
    "@angular/common": "^21.0.2",
    "@angular/compiler": "^21.0.2",
    "@angular/core": "^21.0.2",
    "@angular/forms": "^21.0.2",
    "@angular/platform-browser": "^21.0.2",
    "@angular/router": "^21.0.2",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "bootstrap": "^5.3.8",
    "highlight.js": "^11.11.1",
    "rxjs": "~7.8.0",
    "sdga-ui": "^1.0.8",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.1",
    "@angular/cli": "^21.0.1",
    "@angular/compiler-cli": "^21.0.0",
    "angular-cli-ghpages": "^2.0.3",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
